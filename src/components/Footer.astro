  <script>
document.addEventListener('DOMContentLoaded', function () {
    // Initialize MicroModal with awaitCloseAnimation set to true
    MicroModal.init({
        awaitCloseAnimation: true, // set to true if using animations
        // other options here
    });

    // Attach click event to all links with 'data-micromodal-trigger'
    document.querySelectorAll('[data-micromodal-trigger]').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault(); // Prevent default anchor behavior

            // Close any currently open modal
            const openModal = document.querySelector('.modal.is-open');
            if (openModal) {
                const modalIdToClose = openModal.id;
                MicroModal.close(modalIdToClose);
                // Wait for the close animation to complete
                setTimeout(() => {
                    // Then open the new modal
                    const modalId = this.getAttribute('data-micromodal-trigger');
                    MicroModal.show(modalId);
                }, 300); // Adjust based on your modal close animation duration
            } else {
                // If no modal is open, just open the new one
                const modalId = this.getAttribute('data-micromodal-trigger');
                MicroModal.show(modalId);
            }
        });
    });
});



  </script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
    var moreBtn = document.getElementById('more-btn');
    var moreMenu = document.getElementById('more-menu');

    moreBtn.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default anchor behavior
        // Toggle the display of the menu
        moreMenu.style.display = moreMenu.style.display === 'block' ? 'none' : 'block';
    });

    // Optional: Hide the menu when clicking outside of it
    document.addEventListener('click', function (event) {
        var isClickInsideMenu = moreMenu.contains(event.target);
        var isClickInsideMoreBtn = moreBtn.contains(event.target);

        if (!isClickInsideMenu && !isClickInsideMoreBtn) {
            moreMenu.style.display = 'none';
        }
    });
});

  </script>